#!/usr/bin/env python
import argparse
import parcel
import logging

from parcel import manifest
from parcel.log import get_logger


logging.root.setLevel(logging.INFO)
log = get_logger('parcel_client')


def get_client(args, token):
    if args.mode == 'udt':
        client = parcel.UDTClient(
            token,
            host=args.host,
            port=args.port,
            n_threads=args.n_threads,
        )
    elif args.mode == 'https':
        client = parcel.HTTPClient(
            token,
            url=args.url,
            n_processes=args.n_processes,
        )
    else:
        raise RuntimeError('Unknown functionality.')
    return client


def load_token(args):
    if args.token_file:
        with open(args.token_file, 'r') as f:
            return f.read()
    else:
        return args.token

if __name__ == '__main__':
    parser = argparse.ArgumentParser()
    subparsers = parser.add_subparsers(help='Download using UDT or HTTPS',
                                       dest='mode')

    #############################################################
    #                      UDT options
    #############################################################

    udt = subparsers.add_parser('udt', help='Download files via UDT')
    udt.add_argument('file_ids', metavar='file_id', type=str, nargs='*',
                     help='uuids to download')
    udt.add_argument('-n', '--n-threads', type=int, default=4,
                     help='Number of encryption/http threads.')
    udt.add_argument('-p', '--port', default=9000, type=str,
                     help='parcel server port')
    udt.add_argument('-i', '--host', default='localhost', type=str,
                     help='parcel server port')
    udt.add_argument('-m', '--manifest', type=manifest.argparse_type,
                     default=list(),
                     help='GDC Download manifest file.')
    udt.add_argument('-v', '--verbose', action='store_true',
                     help='verbose logging')
    udt.add_argument('-d', '--dir', default=None,
                     help='Directory to download files to. '
                     'Defaults to current dir')
    udt.add_argument('-x', '--no-stats', action='store_true',
                     help='turn off statistics printing')
    # Add token args
    token_args = udt.add_mutually_exclusive_group(required=False)
    token_args.add_argument('-t', '--token-file', default='', type=str,
                            help='authentication token file')
    token_args.add_argument('-T', '--token', default='', type=str,
                            help='authentication token')

    #############################################################
    #                      HTTP options
    #############################################################

    https = subparsers.add_parser('https', help='Download files via HTTPS')
    https.add_argument('file_ids', metavar='file_id', type=str, nargs='*',
                       help='uuids to download')
    https.add_argument('-n', '--n-processes', type=int, default=4,
                       help='Number of http .')
    https.add_argument('-u', '--url', required=True, type=str,
                       help='Download api url to append file_ids to')
    https.add_argument('-m', '--manifest', type=manifest.argparse_type,
                       default=list(),
                       help='GDC Download manifest file.')
    https.add_argument('-v', '--verbose', action='store_true',
                       help='verbose logging')
    https.add_argument('-d', '--dir', default=None,
                       help='Directory to download files to. '
                       'Defaults to current dir')
    # Add token args
    token_args = https.add_mutually_exclusive_group(required=False)
    token_args.add_argument('-t', '--token-file', default='', type=str,
                            help='authentication token file')
    token_args.add_argument('-T', '--token', default='', type=str,
                            help='authentication token')
    # Add token args

    args = parser.parse_args()

    # Set verbosty
    if args.verbose:
        logging.root.setLevel(logging.DEBUG)

    token = load_token(args)
    client = get_client(args, token)

    # Create file list
    file_ids = [f['id'] for f in args.manifest]+args.file_ids

    # Download files to current directory
    client.download_files(
        file_ids,
        directory=args.dir,
    )
